<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingLeft="20dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="60dp"
        android:paddingRight="20dp"
        android:background="@drawable/kk_rect_black_b4d4d4d_harf_r100"
        android:orientation="horizontal"
        android:paddingLeft="56dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_product_text"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:background="@drawable/kk_rect_ffd200_harf_r100"
                android:paddingLeft="5dp"
                android:paddingRight="8dp"
                android:textColor="#000000"
                android:textSize="9dp"
                android:textStyle="bold"
                tools:text="Recommend" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/kk_rect_black_r30"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/kk_ic_one_coin" />

                <TextView
                    android:id="@+id/tv_won"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="#ffffff"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    tools:text="500" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tv_bonus_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#828282"
                    android:textSize="12dp"
                    tools:text="10 + 0 Bonus = " />

                <TextView
                    android:id="@+id/tv_total_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange"
                    android:textSize="13dp"
                    tools:text="10 Coin" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_coin"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/kk_rect_262626_r16"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:textSize="14dp"
            android:textColor="@color/yellow"
            tools:text="â‚¹ 30" />

    </FrameLayout>

    <ImageView
        android:id="@+id/titleImageView"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/ic_launcher" />

</FrameLayout>