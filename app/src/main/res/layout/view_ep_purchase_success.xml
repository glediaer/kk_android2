<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b3000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/kk_rect_ep_purchase_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="18dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/kk_ic_purchase_check_on" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:text="@string/str_success1"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <include layout="@layout/item_underline_1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="75dp"
                android:layout_height="107dp"
                app:cardCornerRadius="3dp">

                <ImageView
                    android:id="@+id/mainImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher" />

            </androidx.cardview.widget.CardView>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/successTitleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="14dp"
                        tools:text="The Last Print" />

                    <TextView
                        android:id="@+id/successEpCountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#0057b3"
                        android:textSize="12dp"
                        tools:text="2 episodes" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/successRemainTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#c6c6c6"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        tools:text="3 days rental" />

                    <TextView
                        android:id="@+id/successTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#c6c6c6"
                        android:textSize="10dp"
                        tools:text="01-05-2020 01:23" />
                </LinearLayout>
            </FrameLayout>

        </LinearLayout>

        <include layout="@layout/item_underline_1dp" />

        <Button
            android:id="@+id/doneButton"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/kk_rect_yellow_r30"
            android:enabled="false"
            android:text="@string/str_done"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="18dp" />

    </LinearLayout>


</FrameLayout>