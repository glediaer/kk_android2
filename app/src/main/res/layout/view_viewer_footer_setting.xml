<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/settingCloseView"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/kk_circle_viewer_footer">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:src="@drawable/kk_viewer_ep_close"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#262626"
        android:orientation="vertical"
        android:paddingTop="17dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@drawable/kk_night"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#ffffff"
                    android:text="@string/str_night_mode" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="#828282"
                    android:text="@string/str_night_mode_desc" />

            </LinearLayout>

            <Switch
                android:id="@+id/nightSwitch"
                android:layout_width="50dp"
                android:layout_height="26dp"/>

        </LinearLayout>

        <include
            layout="@layout/item_underline_2e2e2e"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@drawable/kk_auto_next"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#ffffff"
                    android:text="@string/str_auto_next" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="#828282"
                    android:text="@string/str_auto_next_desc" />

            </LinearLayout>

            <Switch
                android:id="@+id/autoNextSwitch"
                android:layout_width="50dp"
                android:layout_height="26dp"/>

        </LinearLayout>

        <include
            layout="@layout/item_underline_2e2e2e"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:src="@drawable/kk_auto_play"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:textColor="#ffffff"
                        android:text="@string/str_auto_play" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="#828282"
                        android:text="@string/str_auto_play_desc" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/auto1xTextView"
                    android:layout_width="0dp"
                    android:layout_height="26dp"
                    android:layout_weight="1"
                    android:tag="1"
                    android:background="@drawable/kk_selector_viewer_autoscroll"
                    android:textSize="14dp"
                    android:textColor="#c6c6c6"
                    android:gravity="center"
                    android:text="@string/str_1x" />

                <TextView
                    android:id="@+id/auto2xTextView"
                    android:layout_width="0dp"
                    android:layout_height="26dp"
                    android:layout_weight="1"
                    android:tag="2"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/kk_selector_viewer_autoscroll"
                    android:textSize="14dp"
                    android:textColor="#c6c6c6"
                    android:gravity="center"
                    android:text="@string/str_2x" />

                <TextView
                    android:id="@+id/auto3xTextView"
                    android:layout_width="0dp"
                    android:layout_height="26dp"
                    android:layout_weight="1"
                    android:tag="3"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/kk_selector_viewer_autoscroll"
                    android:textSize="14dp"
                    android:textColor="#c6c6c6"
                    android:gravity="center"
                    android:text="@string/str_3x" />

            </LinearLayout>

        </LinearLayout>

        <include
            layout="@layout/item_underline_2e2e2e"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/kk_bright_off"/>

            <SeekBar
                android:id="@+id/settingSeekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="50"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/kk_bright_on"/>

        </LinearLayout>


    </LinearLayout>



</LinearLayout>