<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/trans"
    android:gravity="center_horizontal"
    android:paddingRight="28dp"
    android:paddingLeft="28dp">

    <FrameLayout
        android:id="@+id/prevView"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/kk_selector_viewer_prev">

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_gravity="center"
            android:src="@drawable/kk_viewer_prev"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/commentView"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/kk_circle_viewer_footer">

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_gravity="center"
            android:src="@drawable/kk_comment"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/settingView"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/kk_circle_viewer_footer">

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_gravity="center"
            android:src="@drawable/kk_easy_button"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/epListView"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/kk_circle_viewer_footer">

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_gravity="center"
            android:src="@drawable/kk_ep_list"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/nextView"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/kk_selector_viewer_prev">

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_gravity="center"
            android:src="@drawable/kk_viewer_next"/>

    </FrameLayout>

</LinearLayout>