<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="50dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/rankingImageView"
            android:layout_width="95dp"
            android:layout_height="140dp"
            android:layout_marginLeft="60dp"
            android:src="@drawable/kk_ranking_1"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@drawable/kk_gradient_ranking_item">

            <include
                layout="@layout/view_remain_tag"
                android:layout_gravity="right|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="142dp"
            android:layout_height="172dp">

            <ImageView
                android:id="@+id/mainImageView"
                android:layout_width="142dp"
                android:layout_height="172dp"
                android:scaleType="fitXY"
                tools:src="@mipmap/ic_launcher"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="9dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#2e2e2e"
                android:textStyle="bold"
                android:singleLine="true"
                tools:text="Thread And Th…" />

            <TextView
                android:id="@+id/writerTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#828282"
                tools:text="Melon MAN" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <include
                    layout="@layout/view_content_like"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="#828282"
                    android:text="·"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/genreTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:textColor="#828282"
                    tools:text="Romance" />

            </LinearLayout>

        </LinearLayout>

        <include
            layout="@layout/item_underline"
            android:layout_marginTop="25dp"
            android:layout_width="208dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="0.5dp" />

    </LinearLayout>

</RelativeLayout>