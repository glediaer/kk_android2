<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f7f8fa">

    <View
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:background="#e5e5e5"/>
    
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="39dp"
        android:layout_marginLeft="29dp"
        android:src="@drawable/kk_selector_gift_oval"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="39dp"
        android:paddingLeft="60dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ddayTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="#828282"
                android:textStyle="bold"
                tools:text="D - 105" />

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="14dp"
                android:textColor="#000000"
                android:textStyle="bold"
                tools:text="A Chance for Romance Sale!Check it out!" />

            <TextView
                android:id="@+id/remainTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="12dp"
                android:textColor="#828282"
                tools:text="2 days ago" />

        </LinearLayout>
        
        <ImageView
            android:id="@+id/mainImageView"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@drawable/kk_circle_trans"
            android:layout_marginLeft="60dp"
            android:src="@mipmap/ic_launcher"/>

    </LinearLayout>

</RelativeLayout>