<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@drawable/kk_gradient_tabmenu_rect"
    android:gravity="center"
    android:layout_marginLeft="@dimen/tab_left_margin">

    <RelativeLayout
        android:id="@+id/homeButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:src="@drawable/kk_ic_tab_home"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/onGoingButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:src="@drawable/kk_selector_tabmenu_ongoing"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/waitButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:src="@drawable/kk_selector_tabmenu_wait_for_free" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rankingButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:src="@drawable/kk_selector_tabmenu_top"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/genreButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:src="@drawable/kk_selector_tabmenu_genre"/>

    </RelativeLayout>

</LinearLayout>