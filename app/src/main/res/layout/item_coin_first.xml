<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="25dp"
    android:paddingBottom="10dp"
    android:paddingRight="20dp">

    <RelativeLayout
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/kk_rect_black_bffd200_r10"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/tv_product_text"
            android:layout_width="65dp"
            android:layout_height="14dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/kk_rect_e02020_harf_r100"
            android:paddingLeft="19dp"
            android:text="@string/str_popular"
            android:textColor="#ffffff"
            android:textSize="9dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_product_text"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/kk_ic_one_coin" />

                <TextView
                    android:id="@+id/tv_total_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:textColor="#ffffff"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    tools:text="3300" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">

                <TextView
                    android:id="@+id/tv_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#828282"
                    android:textSize="14dp"
                    tools:text="3000 +" />

                <TextView
                    android:id="@+id/tv_bonus_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="#e02020"
                    android:textSize="14dp"
                    tools:text="3000" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_won"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/kk_rect_262626_bffd200_r16"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:textColor="@color/yellow"
            android:textSize="14dp"
            tools:text="â‚¹ 90" />

    </RelativeLayout>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/kk_main_key" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#33000000"
        android:layout_below="@+id/mainView"
        android:layout_marginTop="20dp" />

</RelativeLayout>