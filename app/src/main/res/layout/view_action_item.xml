<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:paddingRight="16dp">

    <ImageView
        android:id="@+id/giftboxImageView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="visible"
        android:src="@drawable/kk_ic_gift"/>

    <ImageView
        android:id="@+id/searchImageView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="25dp"
        android:layout_centerVertical="true"
        android:visibility="visible"
        android:layout_toLeftOf="@+id/giftboxImageView"
        android:src="@drawable/kk_ic_search"/>
    
    <ImageView
        android:id="@+id/contactImageView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:src="@drawable/kk_ic_contact"/>

    <ImageView
        android:id="@+id/scribeImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:src="@drawable/kk_selector_subscribe"/>

</RelativeLayout>